set $mode_display Ext Screen (v) eDP ON, (h) HDMI ON, (x) eDP OFF, (y) HDMI OFF

mode "$mode_display" {
    bindsym v exec --no-startup-id xrandr --output eDP-1 --auto --left-of HDMI-1, mode "default"
    bindsym h exec --no-startup-id xrandr --output HDMI-1 --auto --right-of eDP-1, mode "default"
    bindsym x exec --no-startup-id xrandr --output eDP-1 --auto --off, mode "default"
    bindsym y exec --no-startup-id xrandr --output HDMI-1 --auto --off, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+p mode "$mode_display"
bindsym $mod+m move workspace to output left

set $mode_screenshot FullScreen(f), Selection(s), ActiveWindows(w), toClipboard(Shift+...)

mode "$mode_screenshot" {
    bindsym f exec --no-startup-id maim "/home/$USER/Pictures/$(date)", mode "default"
    bindsym s exec --no-startup-id maim --select "/home/$USER/Pictures/$(date)", mode "default"
    bindsym w exec --no-startup-id maim --window $(xdotool getactivewindow) "/home/$USER/Pictures/$(date)", mode "default"
    bindsym Shift+f exec --no-startup-id maim | xclip -selection clipboard -t image/png,mode "default"
    bindsym Shift+s exec --no-startup-id maim --select | xclip -selection clipboard -t image/png, mode "default"
    bindsym Shift+w exec --no-startup-id maim --window $(xdotool getactivewindow) | xclip -selection clipboard -t image/png, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Print mode "default"
}
bindsym Print mode "$mode_screenshot"
